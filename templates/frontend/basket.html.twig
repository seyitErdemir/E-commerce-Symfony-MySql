				</div>
			</section>
			<!---End-Main-section-->


		{% else %}

			<!---Start-Product-Detail-->
			<section class="ws-section-spacing">
				<div class="container">
					<div class="row">
						<div class="my-cart">
							<h2>Shopping Cart</h2>
							<table class="table-responsive">
								<thead>
									<tr>
										<th class="cart-product">Product</th>
										<th class="cart-name">Name</th>
										<th class="cart-price">Price</th>
										<th class="cart-quantity">Quantity</th>
										<th class="cart-Total">Total</th>
										<th class="cart-action">Action</th>
									</tr>
								</thead>
								<tbody>

									{% for key, basket in baskets %}
										<tr>
											<td class="cart-img">
												<div class="cart-img-bg"><img src="{{ asset('upload/images/products/')}}{% if basket.image %}{{basket.image}}{% else %}default.png{% endif %}" class="wow zoomIn" data-wow-delay=".25s" data-wow-duration="1s" data-wow-iteration="1" alt=""></div>
											</td>
											<td class="cart-name-product">
												<a href="#">{{ basket.name}}</a>
											</td>
											<td class="cart-product-price">
												<a href="#">{{basket.price}}</a>
											</td>
											<td class="cart-quantity">
												<div class="product_quantity">
													<div class="quanty_form">
														<div class="product-quantity d-flex">
															<a href="/basket/minus?productId={{basket.id}}" type="button" class="sub">-</a>
															<input type="text" value="{{basket.quantity}}">
															<a href="/basket/plus?productId={{basket.id}}" type="button" class="add">+</a>
														</div>
													</div>
												</div>
											</td>
											<td class="cart-total-price">
												<a href="#">{{basket.totalPrice}}
													€</a>
											</td>
											<td class="cart-action">
												<a href="/basket/deleteProduct?productId={{basket.id}}">
													<i class="flaticon-delete"></i>
												</a>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
							<div class="total-price justify-content-between">
								<a href="/" class="add-cart active">Continue Shopping</a>
								<p class="grand-total">Grand Total :
									{{baskets[0]['basketTotalPrice']}}
									€</p>
								<a href="/check-out" class="add-cart">Proceed To Checkout</a>
							</div>
						</div>
					</div>
				</div>
			</section>
			<!---End-Product-Detail-->

