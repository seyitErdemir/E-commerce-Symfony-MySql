		<section class="ws-section-spacing">
			<div
				class="container">
				<!--Billing-Detail-->
				<div class="row">
					{% if  baskets  is empty   %}


						<!---Start-main-section-->
						<section class="page-slider">
							<div class="hero-banner-content">
								<div class="container">
									<div class="row">
										<div class="col-lg-6">
											<h1 class="banner-title">Daha önce herhangi bir alışveriş yapmamışsınız.</h1>

										</div>
										<div class="col-lg-6">
											<div class="about-slider-img">
												<img src="images/about-slider-img.png" class="wow fadeInRight" data-wow-delay=".25s" data-wow-duration="1s" data-wow-iteration="1" alt="">
											</div>
										</div>
									</div>
								</div>
							</div>
						</section>
						<!---End-Main-section-->

					{% else %}


						<div class="row">
							<div class="my-cart">
								<h2>Geçmiş Alışverişler</h2>
								{% for key, basket in baskets %}
									<table class="table-responsive">
										<thead>
											<tr>

												<th class="cart-name">#Id</th>
												<th class="cart-price">User</th>
												<th class="cart-quantity">Address</th>
												<th class="cart-Total">Total Price</th>
											</tr>
										</thead>

										<tbody>
											<tr>
												<td class="cart-name-product">
													<a href="#">{{ basket.id}}</a>
												</td>
												<td class="cart-name-product">
													<a href="#">{{ basket.user.getName() }}</a>
												</td>
												<td class="cart-product-price">
													<a href="#">{{basket.address}}</a>
												</td>

												<td class="cart-total-price">
													<a href="#">{{basket.totalPrice}}
														€</a>
												</td>

											</tr>


										</tbody>

									</table>
									<div class="row justify-content-center">
										<div class="col-lg-12">
											<div class="traking-bar">
												<div class="row">
													<div class="col-lg-3 col-md-3 col-sm-12">
														<div class="trakking-icon active">
															<span>
																<i class="flaticon-box"></i>
															</span>
															<p>Ready For Dispatch</p>
														</div>
													</div>
													<!--item-->
													<div class="col-lg-3 col-md-3 col-sm-12">
														<div class="trakking-icon active">
															<span>
																<i class="flaticon-shipped"></i>
															</span>
															<p>Depart From Seller</p>
														</div>
													</div>
													<!--item-->
													<div class="col-lg-3 col-md-3 col-sm-12">
														<div class="trakking-icon 	{% if (basket.status )  or (basket.checkMoney )    %}  active	{% endif %} ">
															<span>
																<i class="flaticon-delivery"></i>
															</span>
															<p>Sipariş yönetici onayı beklemekte</p>
														</div>
													</div>
													<!--item-->
													<div class="col-lg-3 col-md-3 col-sm-12">
														<div class="trakking-icon  	{% if  basket.status   %}  active	{% endif %}   ">
															<span>
																<i class="flaticon-package"></i>
															</span>
															<p>Paket tarafınızca alındı.</p>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>

